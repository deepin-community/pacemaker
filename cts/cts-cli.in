    cmd="crm_rule -c -r cli-prefer-rule-dummy-not-yet"
    test_assert $CRM_EX_NOT_YET_IN_EFFECT

    desc="Verify date_spec rule with years has expired"
    cmd="crm_rule -c -r cli-prefer-rule-dummy-date_spec-only-years"
